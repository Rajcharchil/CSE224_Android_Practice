<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_colour"
    tools:context=".MainActivity2_Intent">

    <!-- CardView to hold buttons -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:elevation="10dp"
        android:padding="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="90dp"
                android:layout_marginVertical="40dp"
                android:text="Intent"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold"/>

            <!-- Open Google Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/openGoogleButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/red"
                android:padding="12dp"
                android:text="Open Google"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:icon="@drawable/img"
                app:iconGravity="textStart"
                app:iconPadding="16dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp"/>

            <!-- Open Camera Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/openCameraButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/red"
                android:padding="12dp"
                android:text="Open Camera"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:icon="@drawable/baseline_camera_alt_24"
                app:iconGravity="textStart"
                app:iconPadding="16dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp"/>

            <!-- Make Phone Call Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/makeCallButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/red"
                android:padding="12dp"
                android:text="Make Phone Call"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:icon="@drawable/baseline_add_ic_call_24"
                app:iconGravity="textStart"
                app:iconPadding="16dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp"/>

            <!-- Share Something Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/shareButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/red"
                android:padding="12dp"
                android:text="Share Something"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:icon="@drawable/baseline_share_24"
                app:iconGravity="textStart"
                app:iconPadding="16dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/img_1"
        app:tint="@color/white"/>

    <!-- Verify Button -->
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:backgroundTint="@color/blue"
        android:text="Verify"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
